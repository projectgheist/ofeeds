nav.navbar#hdr(style='margin-bottom:0')
	.container(style='width:100%')
		.navbar-header
			a.navbar-brand(ng-href='/')
				i.fa.fa-rss.fa-fw.fa-flip-horizontal
				| OFeeds
.well(style='height:100%;padding-left:0;padding-right:0;')
	.col-xs-12
		form
			.form-group
				.form-control-wrapper
					input.input-lg.form-control.typeahead#nrss(type="text",placeholder='example.feed.com/rss') 
					span.material-input
	.list-group
		.list-group-item(ng-class="{active:isActive('state/-/reading-list')}")
			a(href="/subscription/user/reading-list",id='All')
				i.fa.fa-fw.fa-bars
				| All
		.line-separator
		.list-group-item(ng-repeat="sub in subs",ng-class="{active: isActive('{{sub.id}}')}")
			a.text-overflow(href="/subscription/{{sub.id}}")
				i.fa.fa-bookmark-o.fa-fw
				| {{sub.title}}
			span.badge {{sub.unreadcount}}
		.line-separator
nav.navbar#ftr(style='position:fixed;bottom:0;margin-bottom:0')
	.container(style='width:100%')
		.navbar-collapse.collapse
			ul.nav.navbar-nav
				li
					a(href='/logout',target="_self")
						i.fa.fa-fw.fa-power-off
						| Logout