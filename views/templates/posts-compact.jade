.list-article-group
	.row
		.col-xs-12#map
			#ma(data-spy="affix",data-offset-top="85")
				nav.navbar.navbar-default
					.navbar-header
						a.navbar-brand(href="{{stream.self.href}}") {{stream.title}}
					.collapse.navbar-collapse
						ul.nav.navbar-nav.navbar-right
							li
								a(href='#',alt='Mark all as Read') 
									i.fa.fa-fw.fa-check
							li
								a(href='#',alt='Refresh') 
									i.fa.fa-fw.fa-refresh
							li
								a(href='#',alt='Options') 
									i.fa.fa-fw.fa-ellipsis-v
			.well
				.row.list-group
					.col-xs-6.list-group-item
						.row-content
							h4.list-group-item-heading Description
							p.list-group-item-text {{stream.description}}
					.col-xs-6.list-group-item
						.row-content
							h4.list-group-item-heading Update time
							p.list-group-item-text {{stream.updated}}
	.article.article-sm(ng-repeat="post in stream.items",on-last-repeat='')
		.row
			a(href='',ng-click="test('test');")
				.col-xs-9
					p.text-overflow {{post.title}}
				.col-xs-3(style="text-align:right")
					p {{post.published}}
		.line-separator