.row(ng-click="toggle(post)",ng-class="isRead(post) ? 'read' : ''",style='padding: 10px 0')
	div(ng-if="stream.showOrigin")
		.visible-lg.col-lg-2
			a(href="#/subscription/feed/{{post.origin.url}}") 
				span.label.label-primary {{post.origin.title}}
		.col-xs-9.col-lg-7
			p.text-overflow {{post.title}}
	div(ng-if="!stream.showOrigin")
		.col-xs-9
			p.text-overflow {{post.title}}
	.col-xs-3(style="text-align:right")
		p {{post.published}}
.row
	.col-xs-12
		.line-separator