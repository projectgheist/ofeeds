.col-xs-12(ng-click="toggle(post)",ng-class="{'read':isRead(post)}")
	.row
		.col-lg-2(ng-if="!stream || stream.showOrigin")
			.textfit(ng-textfit='false')
				a(href="{{post.origin.url}}",style="width:100%;height:32px")
					.label.label-primary {{post.origin.title}}
		.col-xs-9(ng-class="{'col-lg-7':(!stream || stream.showOrigin)}")
			.textfit(ng-textfit='false')
				a(href='/post/{{post.uid}}') {{post.title}}
		.col-xs-3
			p.text-right {{post.formatted}}