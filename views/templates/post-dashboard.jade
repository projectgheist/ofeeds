.col-xs-12
	.row
		.col-xs-6
			.well
				h2 Recommended
				small Number of subscribers / Alphabetical
				hr
				div(ng-if="!pf")
					include loading
				ul.list-unstyled(ng-repeat='feed in pf')
					li 
						a.text-overflow(href="{{feed.url}}") 
							.pull-left(style="width:32px;height:16px;margin-right:15px")
								img(ng-src="{{feed.favicon}}", ng-if="feed.favicon", style="height:100%")
								i.fa.fa-fw.fa-bookmark(ng-if="!feed.favicon")
							| {{feed.title}}
		.col-xs-6
			.well
				h2 Recently added
				small Database add time
				hr
				div(ng-if="!rf")
					include loading
				ul.list-unstyled(ng-repeat='feed in rf')
					li 
						a.text-overflow(href="{{feed.url}}")
							.pull-left(style="width:32px;height:16px;margin-right:15px")
								img(ng-src="{{feed.favicon}}", ng-if="feed.favicon", style="height:100%")
								i.fa.fa-fw.fa-bookmark(ng-if="!feed.favicon")
							| {{feed.title}}
	.row
		.col-xs-12
			h2 Most recent articles
			small Database add time
			hr
			div(ng-if="!rp")
				include loading
			.panel.panel-default(ng-repeat='post in rp')
				.panel-heading
					.row
						.col-xs-4
							.text-overflow
								a(href="{{post.origin.url}}")
									img(ng-src="{{post.origin.favicon}}", ng-if="post.origin.favicon", width="32", style="margin-right:15px")
									i.fa.fa-fw.fa-bookmark(ng-if="!post.origin.favicon", style="width:32px;margin-right:15px")
									| {{post.origin.title}}
						.col-xs-8
							a(href="{{post.alternate.href}}",target="_blank") {{post.title}}
							| &nbsp;·
							span(ng-if="post.author")
								| &nbsp;
								a(href="#") {{post.author}} 
								| &nbsp;·
							| &nbsp;{{post.published}}
				.panel-body
					.col-xs-4(style="height:360px;overflow:hidden")
						img(data-layzr="{{post.content.images.other[0].url}}",holderjs='')
					.col-xs-8
						div(ng-bind-html="post.content.summary")