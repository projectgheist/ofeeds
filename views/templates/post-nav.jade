#ma(data-spy="affix",data-offset-top="85")
	.row
		nav.navbar.navbar-default
			.navbar-header
				a.navbar-brand(href='/subscription/{{stream.id}}')
					i.fa.fa-bookmark-o.fa-fw
					| {{stream.title}}
			.collapse.navbar-collapse
				ul.nav.navbar-nav.navbar-right
					if user
						li.btn-success(ng-if='stream.subscribed === 0')
							a(href='',alt='Subscribe',ng-click='sbmt()') 
								i.fa.fa-fw.fa-plus
						li(ng-if='stream.subscribed > 0')
							a(href='',alt='Mark all as Read') 
								i.fa.fa-fw.fa-check
					li
						a(href='#',alt='Refresh',ng-click='rfrsh()') 
							i.fa.fa-fw.fa-refresh#ar(ng-class="isSpinning() ? 'fa-spin' : ''")
					li
						a.dropdown-toggle(alt='Options',data-toggle="dropdown") 
							i.fa.fa-fw.fa-ellipsis-v
						ul.dropdown-menu
							li
								a(href='',ng-click="updateStyle('list')")
									i.fa.fa-fw.fa-align-justify
									| List view
							li
								a(href='',ng-click="updateStyle('tile')")
									i.fa.fa-fw.fa-th
									| Tile view
							li
								a(href='',ng-click="updateStyle('mini')")
									i.fa.fa-fw.fa-list
									| Minimal view
							li.divider
							li
								a(href='')
									i.fa.fa-fw.fa-info
									| About feed
					li(ng-if="canScroll()")
						a.btn-info(alt='Scroll to top',ng-click='gotoTop()')
							i.fa.fa-fw.fa-arrow-up
	.row
		.col-xs-12
			.alert.alert-dismissible.hidden#a(role="alert")
				button.close(type="button",data-dismiss="alert")
					span(aria-hidden="true") &times;
					span.sr-only Close
				p#am
.row
	.col-xs-12
		.well.collapse#stream-info
			.row.list-group
				.col-xs-6.list-group-item
					.row-content
						h4.list-group-item-heading Site URL
						p.list-group-item-text 
							input(type="text",class="form-control",value='{{stream.alternate[0].href}}',disabled='')
							span.material-input
					.row-content
						h4.list-group-item-heading Description
						p.list-group-item-text {{stream.description}}
				.col-xs-6.list-group-item
					.row-content
						h4.list-group-item-heading Update time
						p.list-group-item-text {{stream.updated}}
					.row-content
						p
							button.btn.btn-primary(ng-click='delt()') Delete feed