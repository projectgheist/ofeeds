include includes/header
div(ng-controller="AppFeeds")
	#ma(data-spy="affix")
		.nav.navbar.navbar-default
			.container
				.col-lg-2
					.navbar-header
						a.navbar-brand(href="/")
							i.fa.fa-rss.fa-fw.fa-flip-horizontal
							= config.title
	.container-fluid#map
		.row
			.col-xs-12
				h1 All Feeds
					small &nbsp;(Next refresh in&nbsp;
						b {{nrt}}
						| )
				hr
				table.table.table-striped.table-hover
					thead
						tr
							th Icon
							th Name
							th Crawl time
							th Update time
							th.text-center Action
					tbody
						tr(ng-repeat='f in subs')
							td
								i.fa.fa-bookmark-o.fa-fw
							td.col-xs-5
								input.form-control(type="text",value="{{f.title}}",style='background-color:transparent')
							td {{f.crawlTime}}
							td {{f.updated}}
							td.col-xs-4.text-center
								button.btn.btn-primary(type="button",ng-click="gotostream(f)") View
								button.btn.btn-primary(type="button") Refresh
								if user !== undefined && user.isAdmin
									button.btn.btn-primary(type="button") Remove
include includes/js