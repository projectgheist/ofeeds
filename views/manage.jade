include includes/header
div(ng-controller="AppFeeds")
	#ma(data-spy="affix")
		.nav.navbar.navbar-default
			.container
				.col-lg-2
					.navbar-header
						a.navbar-brand(href="/")
							i.fa.fa-rss.fa-fw.fa-flip-horizontal
							= config.title
	.container-fluid#m
		.row
			.col-xs-12
				h1 Feeds
				hr
				.jumbotron
					p Next feeds refresh in:&nbsp;
						b {{nrt}}
				table.table.table-striped.table-hover
					thead
						tr
							th Icon
							th Name
							th Crawl time
							th Update time
							th Action
					tbody
						tr(ng-repeat='f in subs')
							td 
								i.fa.fa-bookmark-o.fa-fw
							td
								input.form-control(type="text",value="{{f.title}}",style='background-color:transparent')
							td {{f.crawlTime}}
							td {{f.updated}}
							td
								.btn-group
									button.btn.btn-default(type="button") Refresh
									if user !== undefined && user.isAdmin
										button.btn.btn-default(type="button") Remove
include includes/js