.col-md-12.col-lg-6
	.well
		.page-header
			h1 Recommended&nbsp;
				small Number of subscribers
		div(ng-if="!pf")
			include ../elements/loading
		ul.list-unstyled(ng-repeat='feed in pf')
			li 
				a(href="{{feed.url}}") 
					.pull-left(style="width:32px;height:16px;margin-right:15px")
						img(ng-src="{{feed.favicon}}", ng-if="feed.favicon", style="height:100%")
						i.fa.fa-fw.fa-bookmark(ng-if="!feed.favicon")
					ng-Textoverflow {{feed.title}}
.col-md-12.col-lg-6
	.well
		.page-header
			h1 Recently added&nbsp;
				small Database add time
		div(ng-if="!rf")
			include ../elements/loading
		ul.list-unstyled(ng-repeat='feed in rf')
			li 
				a(href="{{feed.url}}")
					.pull-left(style="width:32px;height:16px;margin-right:15px")
						img(ng-src="{{feed.favicon}}", ng-if="feed.favicon", style="height:100%")
						i.fa.fa-fw.fa-bookmark(ng-if="!feed.favicon")
					ng-Textoverflow {{feed.title}}
.col-xs-12
	.well
		.page-header
			h1 Most recent articles&nbsp;
				small Database add time
		div(ng-if="!rp")
			include ../elements/loading
		.row(ng-repeat='post in rp')
			include ../templates/post-compact