include includes/header
.container-fluid(ng-controller="panelController")
	.row
		.col-xs-12.no-padding
			.text-center
				#alert.alert.alert-dismissible.no-margin.hidden(role="alert",ng-class="alertType")
					button.close(data-dismiss="alert",aria-label="Close")
						span(aria-hidden="true") &times;
					p(ng-bind-html="alertMessage")
	.row
		include includes/sidebar
		#panel.well-white(ng-class="isNavVisible() ? 'col-xs-9' : 'col-xs-12'")
			.navbar.navbar-default.navbar-static-top(ng-class="stream !== undefined ? 'no-margin' : ''")
				.container-fluid
					.navbar-header
						ul.nav.navbar-nav
							li
								a(href="#", ng-click='nt()')
									i.fa.fa-align-justify.fa-fw
						button.navbar-toggle(type="button", data-toggle="collapse", data-target=".navbar-collapse")
					.collapse.navbar-collapse
						ul.nav.navbar-nav.navbar-right
							li.dropdown
								a.dropdown-toggle(href="#",data-toggle="dropdown")
									i.fa.fa-ellipsis-v.fa-fw
								ul.dropdown-menu
									li(ng-click="updateStyle('list')")
										a(href="#")
											| List
									li(ng-click="updateStyle('mini')")
										a(href="#")
											| Long
									li(ng-click="updateStyle('tile')")
										a(href="#")
											| Tiled
						form.navbar-form
							.form-group(style="display:inline")
								.input-group(style="display:table")
									.input-group-addon.no-padding(style="width:0.1%")
									input.form-control.typeahead#nrss(type="text",placeholder="Fetch a feed",style='width:100%')
			.container-fluid
				.row(ng-if="stream !== undefined")
					.col-lg-12
						.well
							table.table-condensed
								thead
									tr
										td.col-xs-4
								tbody
									tr
										td URL
										td 
											a.text-overflow(href="{{stream.feedURL}}", target="_blank") {{stream.feedURL}}
									tr
										td Creation
										td {{stream.creation}}
									tr
										td Updated
										td {{stream.updated}}
									tr
										td Visible articles
										td {{stream.items.length}}
				div(ng-view="")
	.modal.fade#myModal(ng-controller="modalController", tabindex="-1", role="dialog", aria-labelledby="myModalLabel", aria-hidden="true")
		.modal-dialog
			.modal-content
				.modal-header
					button.close(type="button", data-dismiss="modal", aria-label="Close")
						span(aria-hidden="true") &times;
					h4.modal-title {{title}}
				.modal-body
					.carousel.slide#carousel-example-generic(data-ride="carousel")
						ol.carousel-indicators(ng-if="images.length > 1")
							li(ng-repeat="a in images", data-target="#carousel-example-generic", data-slide-to="{{$index}}", ng-class="{active: $first}")
						.carousel-inner(role="listbox")
							.item(ng-repeat="i in images", ng-class="{active: $first}")
								img(ng-src="{{i.url}}", style="width:100%")
						a.left.carousel-control(href="#carousel-example-generic", role="button", data-slide="prev", ng-if="images.length > 1")
							span.glyphicon.glyphicon-chevron-left(aria-hidden="true")
							span.sr-only Previous
						a.right.carousel-control(href="#carousel-example-generic", role="button", data-slide="next", ng-if="images.length > 1")
							span.glyphicon.glyphicon-chevron-right(aria-hidden="true")
							span.sr-only Next
include includes/js